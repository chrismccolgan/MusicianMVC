@model MusicianMVC.Models.ViewModels.ManageMusiciansViewModel

@{
    ViewData["Title"] = "ManageMusicians";
}

<h1>Manage Musicians for @Model.Instrument.Name</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ManageMusicians">
            <div class="form-group">
                @foreach (Musician musician in Model.AllMusicians)
                {
                    bool isSelected = Model.SelectedMusicianIds.Contains(musician.Id);

                    <div class="form-check">
                        <input class="form-check-input" type="checkbox"
                               name="selectedMusicianIds"
                               id="@musician.Id" value="@musician.Id" checked="@isSelected" />
                        <label class="form-check-label" for="@musician.Id">@musician.Name</label>
                    </div>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
