@model MusicianMVC.Models.ViewModels.InstrumentFormViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Instrument</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Instrument.Name" class="control-label"></label>
                <input asp-for="Instrument.Name" class="form-control" />
                <span asp-validation-for="Instrument.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Instrument.DifficultyId" class="control-label"></label>
                <select asp-for="Instrument.DifficultyId" class="form-control" >
                    @foreach (Difficulty d in Model.Difficulties)
                    {
                        <option value="@d.Id">@d.Label</option>
                    }
                </select>
                <span asp-validation-for="Instrument.DifficultyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
